{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2017", "dom"],
    "rootDir": "./scripts",
    "outDir": "./build",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules", "build"]
}
